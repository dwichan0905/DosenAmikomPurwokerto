<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imgDosen"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/abednego" />

    <TextView
        android:id="@+id/tvNamaDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="tvNamaDosen"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmailDosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:autoLink="email"
        android:text="tvEmailDosen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNoTelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autoLink="phone"
        android:text="tvNoTelp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAlamatDosen"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:text="tvAlamatDosen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mengampu Mata Kuliah Sejak Tahun Ajaran:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSejakTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="tvSejakTA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRincian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tvRincian"/>

</LinearLayout>